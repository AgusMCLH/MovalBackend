



    <div class="max-w-7xl mx-auto">
        <div class="bg-white rounded-2xl shadow-xl p-8 mb-6">
            <h1 class="text-4xl font-bold text-gray-800 mb-2">Lista de Campamentistas</h1>
            <p class="text-gray-600">Haz clic en cualquier campamentista para ver información detallada</p>
            
            <div class="mt-6">
                <input 
                    type="text" 
                    id="searchInput"
                    placeholder="Buscar por nombre o cédula..."
                    class="w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-indigo-500 focus:outline-none transition-colors"
                >
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="color-primary text-white">
                        <tr>
                            <th class="px-6 py-4 text-left text-sm font-semibold cursor-pointer" onclick="orderByName()">Nombre</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold cursor-pointer" onclick="orderByAge()">Edad</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold">Cedula</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold">Contacto Padre/Tutor</th>
                            <th class="px-6 py-4 text-center text-sm font-semibold">Acción</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div id="modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
        <div class="modal-content bg-white rounded-2xl shadow-2xl max-w-3xl w-full max-h-[90vh] overflow-y-auto">
            <div class="color-primary text-white p-6 rounded-t-2xl flex justify-between items-center sticky top-0 z-10">
                <h2 id="modalTitle" class="text-2xl font-bold">Información del Campamentista</h2>
                <button onclick="closeModal()" class="hover:bg-white hover:bg-opacity-20 rounded-full p-2 transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <div id="modalContent" class="p-6">
            </div>
        </div>
    </div>

    <script>


                const campamentistas = [
        {{#each campers}}
            {
                id: {{this.index}},
                nombre: "{{this.name}}",
                edad: {{this.age}},
                direccion: "{{this.direction}}",
                cedula: "{{this.dni}}",
                telefonoFijo: "{{this.telephone}}",
                celularPadres: "{{this.parentsCellphone}}",
                hospital: "{{this.hospital}}",
                emergenciaMedica: "{{this.medicalEmergency}}",
                suceptible: "{{this.susceptibleIllness}}",
                medicaciones: [{{#each this.medications}}
                    {
                        nombre: "{{this.name}}",
                        dosis: "{{this.dosage}}"
                    }{{#unless @last}},{{/unless}}
                {{/each}}],
                illness: "{{this.illness}}",
                treatment: "{{this.treatment}}",
                contraindications: "{{this.contraindications}}",
                isPaid: {{this.isPaid}},
            },
        {{/each}}
        ];
    </script>

    <script src="/JS/index.js"></script>
