 <div class="min-h-screen flex items-center justify-center">

 <div class="bg-white rounded-2xl shadow-2xl p-8 w-full max-w-md">
        <!-- Logo Institucional -->
        <div class="flex justify-center mb-8">
            <div class="w-32 h-32 color-primary rounded-full flex items-center justify-center shadow-lg">
                <img src="/img/logo.svg" alt="" srcset="">
            </div>
        </div>

        <!-- Título -->
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-2">Bienvenido</h1>
        <p class="text-center text-gray-600 mb-8">Ingrese su contraseña para acceder</p>

        <!-- Formulario -->
        <form id="loginForm" class="space-y-6">
            <div>
                <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                    Contraseña
                </label>
                <div class="relative">
                    <input 
                        type="password" 
                        id="password" 
                        class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200 outline-none"
                        placeholder="••••••••"
                        required
                    >
                    <button 
                        type="button" 
                        id="togglePassword"
                        class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-gray-700 transition"
                    >
                        <svg id="eyeIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Mensaje de error -->
            <div id="errorMessage" class="hidden bg-red-50 border-l-4 border-red-500 p-4 rounded">
                <p class="text-red-700 text-sm font-medium">Contraseña incorrecta. Inténtelo nuevamente.</p>
            </div>

            <!-- Botón de envío -->
            <button 
                type="submit"
                class="w-full color-primary text-white py-3 rounded-lg font-semibold hover:from-blue-700 hover:to-indigo-700 transform hover:scale-105 transition duration-200 shadow-lg"
            >
                Acceder
            </button>
        </form>

        <!-- Pie de página -->
        <div class="mt-6 text-center">
            <a href="#" class="text-sm text-blue-600 hover:text-blue-800 transition">
                ¿Olvidó su contraseña?
            </a>
        </div>
    </div>
 </div>

    <script src="/JS/login.js"></script>